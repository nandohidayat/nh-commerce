<%- include('../_partials/header.ejs') %>
<%- include('../_partials/navigation.ejs') %>

<div id="signinform" class="wrapper fadeInDown">
    <div id="formContent" class="auto-mg">
        <h2 class="fadeIn first form-title">My Profile</h2>

        <form action="/profile?_method=PUT" method="POST" id="profile-form">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <input type="text" id="email" class="fadeIn second" name="email" 
                placeholder="Email address" value="<%= currentUser.email %>" required />
            <input type="text" id="name" class="fadeIn second" name="name" 
                placeholder="Full name" value="<%= currentUser.name %>" required />
            <input type="text" id="phone" class="fadeIn third" name="phone" 
                placeholder="Phone" value="<%= currentUser.phone %>" required />
            <input type="password" id="password" class="fadeIn third" name="password" 
                placeholder="Password"  />
            <input type="submit" class="fadeIn fourth" value="Update" />
        </form>
    
    </div>
</div>

<%- include('../_partials/footer.ejs') %>